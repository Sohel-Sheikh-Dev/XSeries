<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/movieOrTvCardViewsSEARCHACT"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_margin="10dp"
android:layout_height="150dp"
app:cardCornerRadius="5dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/TVcardImageSEARCHACT"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:scaleType="center" />

    <TextView
        android:id="@+id/TVtitleSEARCHACT"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="sans-serif-medium"
        android:maxLines="2"
        android:layout_toEndOf="@+id/TVcardImageSEARCHACT"
        android:gravity="center_vertical"
        android:text="Venom : Let There Be Carnage Saga 1"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TVdateSEARCHACT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVtitleSEARCHACT"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/TVcardImageSEARCHACT"
        android:maxLines="1"
        android:text="kasdl"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TVonlyTitleWhileNullSEARCHACT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVdateSEARCHACT"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/TVcardImageSEARCHACT"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/TVdescriptionSEARCHACT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TVonlyTitleWhileNullSEARCHACT"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/TVcardImageSEARCHACT"
        android:maxLines="2"
        android:text="dl;sjkljkhffljdslkj fhslkjdhlfkjshlkj hf asluizadskalkhlkhjsxlhflsdakhflkjhlkazjlkjhslajldlkjh"
        android:textColor="@color/black"
        android:textSize="15sp" />

</RelativeLayout>

</androidx.cardview.widget.CardView>